<network>
    <name>{{ name }}</name>
    <forward mode="route"/>
    <ip address="{{ network_gateway }}" netmask="{{ network_mask }}">
        <dhcp>
            <range start="{{ dhcp_range_start }}" end="{{ dhcp_range_end }}"/>
            {% for host in hosts %}
                <host mac="{{ host.mac }}" name="{{ host.name }}" ip="{{ host.addr }}"/>
            {% endfor %}
        </dhcp>
    </ip>
</network>